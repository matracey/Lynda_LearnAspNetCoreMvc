@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExploreCalifornia.Models.Post

@{
    Layout = "_Layout";
}

<h1>Create Blog Post</h1>

<fieldset>
    <form asp-action="Create" asp-controller="Blog">

        <div asp-validation-summary="All" class="input-validation-error"></div>
        <p>
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" placeholder="Blog post title" />
            <span asp-validation-for="Title"></span>
        </p>
        <p>
            <textarea asp-for="Body" class="form-control rich-editor" placeholder="Blog post content"></textarea>
            <span asp-validation-for="Body"></span>
        </p>
        <p>
            <button type="submit">Create Post</button>
        </p>
    </form>
</fieldset>

@section scripts{
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script>
        tinyMCE.init({
            selector: '.rich-editor',
            height: 500,
            menu: {
                edit: { title: 'Edit', items: 'undo redo | cut copy paste pastetext | selectall' },
                format: { title: 'Format', items: 'bold italic underline strikethrough superscript subscript | formats | removeformat' },
            }
        });
    </script>
}