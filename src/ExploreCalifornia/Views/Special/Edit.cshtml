@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExploreCalifornia.Models.SpecialViewModel

@{
    Layout = "_Layout";
}

<h1>Edit Special</h1>

<fieldset>
    <form asp-action="Edit" asp-controller="Special" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="input-validation-error"></div>

        <p>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Special name" />
            <span asp-validation-for="Name"></span>
        </p>

        <p>
            <label asp-for="Type"></label>
            <input asp-for="Type" class="form-control" placeholder="Special type" />
            <span asp-validation-for="Type"></span>
        </p>
        <p>
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="Special price" />
            <span asp-validation-for="Price"></span>
        </p>
        <p>
            <label for="image-upload">Image</label>
            <input asp-for="Image" class="form-control" />
        </p>

        <p>
            <label asp-for="Key"></label>
            <input asp-for="Key" class="form-control" placeholder="Key" />
            <span asp-validation-for="Key"></span>
        </p>
        <input asp-for="Id" type="hidden" />
        <p>
            <button type="submit">Update Special</button>
            <a asp-action="Delete" asp-controller="Special" asp-route-key="@Model.DeleteKey">Delete Special</a>
        </p>
    </form>
</fieldset>